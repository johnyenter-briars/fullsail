<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FullSail.Views.MediaControlPage"
             xmlns:ViewModels="clr-namespace:FullSail.ViewModels"
             xmlns:Behaviors="clr-namespace:FullSail.Behaviors"
             xmlns:Models="clr-namespace:FullSail.Models"
             x:DataType="{x:Type ViewModels:MediaControlViewModel}"
             Title="Media Control">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button 
            Margin="10, 25, 10, 25" 
            BackgroundColor="{StaticResource Blue100Accent}"
            TextColor="white"
            ImageSource="icons8_u_turn_to_left_64.png"
            x:Name="esc"
            Command="{Binding EscCommand }"
            CommandParameter="{x:Reference esc}"
            />

        <Button 
            Margin="20, 20, 20, 20" 
            Grid.Column="1" 
            BackgroundColor="{StaticResource Primary}"
            TextColor="white"
            ImageSource="icons8_up_arrow_60.png"
            x:Name="up"
            Command="{Binding UpCommand }"
            CommandParameter="{x:Reference up}"
            />

        <Button 
            Margin="10, 25, 10, 25" 
            Grid.Column="3" 
            BackgroundColor="{StaticResource Blue100Accent}"
            TextColor="white"
            ImageSource="icons8_slider_48.png"
            x:Name="osd"
            Command="{Binding OSDCommand }"
            CommandParameter="{x:Reference osd}"
            />

        <Button 
            Margin="20, 20, 20, 20" 
            Grid.Row="1" 
            BackgroundColor="{StaticResource Primary}"
            TextColor="white"
            ImageSource="icons8_left_arrow_60.png"
            x:Name="left"
            Command="{Binding LeftCommand }"
            CommandParameter="{x:Reference left}"
            />

        <Button 
            Margin="20, 20, 20, 20" 
            Grid.Row="1" 
            Grid.Column="1"
            BackgroundColor="{StaticResource Cyan200Accent}"
            TextColor="white"
            ImageSource="icons8_checked_checkbox_50.png"
            x:Name="enter"
            Command="{Binding EnterCommand }"
            CommandParameter="{x:Reference enter}"
            />

        <Button 
            Margin="20, 20, 20, 20" 
            Grid.Row="1" 
            Grid.Column="2"
            BackgroundColor="{StaticResource Primary}"
            TextColor="white"
            ImageSource="icons8_right_arrow_60.png"
            x:Name="right"
            Command="{Binding RightCommand}"
            CommandParameter="{x:Reference right}"
            />

        <Button 
            Margin="20, 20, 20, 20" 
            Grid.Row="2" 
            Grid.Column="1"
            BackgroundColor="{StaticResource Primary}"
            TextColor="white"
            ImageSource="icons8_down_arrow_60.png"
            x:Name="down"
            Command="{Binding DownCommand }"
            CommandParameter="{x:Reference down}"
            />

        <!--<BoxView Grid.Row="3"
                 Grid.ColumnSpan="3"
                 Color="Red" />
        <Label Grid.Row="3"
               Grid.ColumnSpan="3"
               Text="track and volume slider"
               HorizontalOptions="Center"
               VerticalOptions="Center" />-->

        <VerticalStackLayout
                    Grid.Row="3"
                    Grid.ColumnSpan="3"
                    BackgroundColor="blue"
            >
            <Slider 
                    Margin="10, 20, 10, 20"
                    ValueChanged="VolumeSlider_Changed" 
                />

            <Slider 
                    Margin="10, 20, 10, 20"
                    ValueChanged="SeekSlider_Changed" 
                />
        </VerticalStackLayout>

        <Button 
            Margin="20, 20, 20, 20" 
            Text="Rewind" 
            Grid.Row="4" 
            Grid.Column="0"
            BackgroundColor="{StaticResource Primary}"
            TextColor="white"
            ImageSource="icons8_rewind_50.png"
            x:Name="rewind"
            />
        <Button 
            Margin="20, 20, 20, 20" 
            Grid.Row="4" 
            Grid.Column="1"
            BackgroundColor="{StaticResource Primary}"
            TextColor="white"
            ImageSource="icons8_play_pause_48_2.png"
            x:Name="playpause"
            Command="{Binding TogglePlayPauseCommand }"
            CommandParameter="{x:Reference playpause}"
            />
        <Button 
            Margin="20, 20, 20, 20" 
            Text="" 
            Grid.Row="4" 
            Grid.Column="2"
            BackgroundColor="{StaticResource Primary}"
            TextColor="white"
            ImageSource="icons8_fast_forward_50.png"
            x:Name="fastfoward"
            />

        <Frame 
            BorderColor="LightGray" 
            HasShadow="False" 
            Padding="15" 
            Grid.Row="5"
            Grid.ColumnSpan="2"
            BackgroundColor="Black"
            >
            <Editor 
                    Text="{Binding SearchText}"
                    AutoSize="TextChanges" 
                    FontSize="Medium" 
                    Margin="0">
                <Editor.Behaviors>
                    <Behaviors:TextChangedBehavior Command="{Binding EnterTextChangedCommand}"/>
                </Editor.Behaviors>
            </Editor>
        </Frame>

        <Button 
            Margin="10, 25, 10, 25" 
            Grid.Row="5" 
            Grid.Column="2"
            BackgroundColor="{StaticResource Blue100Accent}"
            TextColor="white"
            ImageSource="icons8_enter_mac_key_50.png"
            Command="{Binding EnterTextCommand}"
            />

    </Grid>
</ContentPage>